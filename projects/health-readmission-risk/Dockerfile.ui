# Use a slim Python base image
FROM python:3.11-slim

# Prevent Python from writing .pyc files and enable unbuffered logs
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Set workdir inside the container
WORKDIR /app

# Copy dependency file first (better Docker layer caching)
COPY requirements-ui.txt /app/requirements-ui.txt

# Install Python dependencies
RUN pip install --no-cache-dir -r /app/requirements-ui.txt

# Copy only what UI needs
COPY ui /app/ui

# Expose Streamlit port
EXPOSE 8501

# Run the Streamlit app
CMD ["streamlit", "run", "ui/streamlit_app.py", "--server.address=0.0.0.0", "--server.port=8501"]
